# mechanism_module.py
import streamlit as st

def show_mechanism_module():
    st.header("⚙️ Mecanismo de acción de los antidepresivos")
    st.image("mechanism_diagram.png", caption="Visualización sináptica", use_column_width=True)
    
    st.markdown("""
    ### ISRS
    - Bloquean la recaptación de serotonina (5-HT)
    
    ### IRSN
    - Bloquean recaptación de 5-HT y noradrenalina (NA)
    
    ### Trazodona
    - Antagonista 5-HT2A → menos ansiedad, más sedación
    
    ### Mirtazapina
    - Antagonista α2 → libera NA → activa neuronas serotoninérgicas
    """)
